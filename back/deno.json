{
  "tasks": {
    "check": "deno check **/*.ts && deno fmt --check && deno lint",
    "deploy": "denoflare push yanoportfolio-back",
    "fmt": "deno fmt",
    "serve": "denoflare serve local",
    "tail": "denoflare tail yanoportfolio-back",
    "test": "echo 'TODO : No tests yet'"
  },
  "imports": {
    "@/": "./src/",
    "@cloudflare/workers-types": "npm:@cloudflare/workers-types@^4.20251209.0"
  },
  "compilerOptions": {
    "checkJs": true,
    "lib": ["deno.ns", "webworker"]
  },
  "fmt": {
    "include": ["./src/"],
    "proseWrap": "preserve",
    "semiColons": true
  },
  "lint": {
    "include": ["./src/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
