---
import BaseLayout, {
  type Props as BaseLayoutProps,
} from "@/layouts/BaseLayout.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

export interface Props extends BaseLayoutProps {}
export interface Props {
  blogPage?: boolean;
}

const { blogPage } = Astro.props;
---

<BaseLayout {...Astro.props}>
  <Header borderVisible={true} isSticky={true} />
  <main
    class=`${blogPage ? "max-w-screen-xl" : "max-w-screen-lg"} m-auto px-6 py-6 space-y-6`
  >
    <slot />
  </main>
  <Footer />
</BaseLayout>
